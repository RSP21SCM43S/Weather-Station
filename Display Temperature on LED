from sense_hat import SenseHat

sense = SenseHat();
sense.clear();

temp = sense.get_temperature();
s = str(temp)

r=0;
g=0;
b=252;

if temp >= 30:
  r = 252
  g = 0 
  b = 0 
  
elif temp <= 0:
  r = 0 
  g = 0 
  b = 252
  
else:
  r = 252
  g = 0 
  b = 252


sense.show_message(s[:6],back_colour=[r,g,b]);
